<Page x:Class="WpfApp3.pages.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page4">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="a"/>
            <TextBox x:Name="aTb"
                     Width="50" TextChanged="aTb_TextChanged"/>
            <TextBlock Text="b"/>
            <TextBox x:Name="bTb"
                     Width="50" TextChanged="bTb_TextChanged"/>
            <TextBlock Text="c"/>
            <TextBox x:Name="cTb"
                     Width="50"/>
            <Button Content="Result" x:Name="ResultBtn"
                    Click="ResultBtn_Click" Width="100"
                    Margin="5"/>
            <StackPanel x:Name="ResultSt" Visibility="Collapsed">
                <TextBlock Text="result"/>
                <TextBox x:Name="ResultTb"/>
            </StackPanel>
            <StackPanel x:Name="Resul2tSt" Visibility="Collapsed">
                <TextBlock Text="result2"/>
                <TextBox x:Name="Result2Tb"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
